 <div class="modal-body">
<%- model_class = Shop -%>

  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:rating) %></th>
      <!-- <th><#%=t '.actions', :default => t("helpers.actions") %></th> -->
    </tr>
  </thead>
  <tbody>

    <% @shops.map do |shop| %>
      <% shop.chai_score = 0 if shop.chai_score.nil? %>
    <% end %>

    <% @shops.sort_by! { |shop| -1 * shop.chai_score} %>

    <% @shops.each do |shop| %>
      <tr>
        <td><%= link_to(shop.name, shop.yelp_url) %></td>
        <td><%= shop.chai_score.round(1) %></td>
        <td><%= link_to "Rate", new_visit_path(shop) %></td>

       <!-- <td>
           <#%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_shop_path(shop), :class => 'btn btn-mini' %>
           <#%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      shop_path(shop),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td> -->
      </tr>
    <% end %>
  </tbody>
</table>
</div>

