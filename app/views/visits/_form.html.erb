<div id="shop-card">
<!--   <h2>Review <%= @shop.name %>!</h2> -->
  <%= form_for @visit , :class => 'rating_form' do |f| %>
  <%= f.label 'wifi:' %>
  <%=f.range_field :wifi, :in => 1...10 %>
  <%= f.label 'power sockets:'%>
  <%=f.range_field :power, :in => 1...10 %>
  <%= f.label 'atmosphere:'%>
  <%=f.range_field :atmosphere, :in => 1...10 %>

  <!-- Needs code review by staff! -->
  <%= f.hidden_field :shop_id, { :value => @shop.id } %>
  <%= f.submit "Rate your visit", :class => "btn btn-small btn-primary" %>
  <% end %>
</div>

